/// url = 'http://hl7.org/fhir/StructureMap/ResearchSubject4to5'
/// name = 'ResearchSubject4to5'
/// title = 'FML Conversion for ResearchSubject: R4 to R5'

uses "http://hl7.org/fhir/4.0/StructureDefinition/ResearchSubject" alias ResearchSubjectR4 as source
uses "http://hl7.org/fhir/StructureDefinition/ResearchSubject" alias ResearchSubjectR5 as target

imports "http://hl7.org/fhir/StructureMap/*4to5"

group ResearchSubject(source src : ResearchSubjectR4, target tgt : ResearchSubjectR5) extends DomainResource <<type+>> {
  src.identifier -> tgt.identifier;
  src.status -> tgt.status;
  src.progress as s -> tgt.progress as t then ResearchSubjectProgress(s,t);
  src.period -> tgt.period;
  src.study -> tgt.study;
  src.subject -> tgt.subject;
  src.assignedComparisonGroup -> tgt.assignedComparisonGroup;
  src.actualComparisonGroup -> tgt.actualComparisonGroup;
  src.consent -> tgt.consent;
}

group ResearchSubjectProgress(source src, target tgt) extends BackboneElement {
  src.type -> tgt.type;
  src.subjectState -> tgt.subjectState;
  src.milestone -> tgt.milestone;
  src.reason -> tgt.reason;
  src.startDate -> tgt.startDate;
  src.endDate -> tgt.endDate;
}

