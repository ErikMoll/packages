/// url = 'http://hl7.org/fhir/StructureMap/Invoice5to4'
/// name = 'Invoice5to4'
/// title = 'FML Conversion for Invoice: R5 to R4'

uses "http://hl7.org/fhir/StructureDefinition/Invoice" alias InvoiceR5 as source
uses "http://hl7.org/fhir/4.0/StructureDefinition/Invoice" alias AccountR4 as target

imports "http://hl7.org/fhir/StructureMap/*5to4

group Invoice(source src : InvoiceR5, target tgt : InvoiceR4) extends DomainResource <<type+>> {
  src.identifier -> tgt.identifier;
  src.status -> tgt.status;
  src.cancelledReason -> tgt.cancelledReason;
  src.type -> tgt.type;
  src.subject -> tgt.subject;
  src.recipient -> tgt.recipient;
  src.date -> tgt.date;
  src.creation -> tgt.creation;
  src.period : date -> tgt.period;
  src.period : Period -> tgt.period;
  src.participant as s -> tgt.participant as t then InvoiceParticipant(s,t);
  src.issuer -> tgt.issuer;
  src.account -> tgt.account;
  src.lineItem as s -> tgt.lineItem as t then InvoiceLineItem(s,t);
  src.totalPriceComponent -> tgt.totalPriceComponent;
  src.totalNet -> tgt.totalNet;
  src.totalGross -> tgt.totalGross;
  src.paymentTerms -> tgt.paymentTerms;
  src.note -> tgt.note;
}

group InvoiceParticipant(source src : null, target tgt : null) extends DomainResource <<type+>> {
  src.role -> tgt.role;
  src.actor -> tgt.actor;
}

group InvoiceLineItem(source src : null, target tgt : null) extends DomainResource <<type+>> {
  src.sequence -> tgt.sequence;
  src.serviced : date -> tgt.serviced;
  src.serviced : Period -> tgt.serviced;
  src.chargeItem : Reference -> tgt.chargeItem;
  src.chargeItem : CodeableConcept -> tgt.chargeItem;
  src.priceComponent -> tgt.priceComponent;
}

